<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apiData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/apiImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/apiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA0000"
                android:layout_toEndOf="@+id/apiImage"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/apiUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/apiTitle"
                android:layout_alignStart="@+id/apiTitle"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#019207"
                android:textSize="20sp" />
        </RelativeLayout>

    </ScrollView>


</androidx.cardview.widget.CardView>